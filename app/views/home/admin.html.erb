
<div class="col-lg-6 mx-lg-auto card shadow mt-5">

  <div class="card-header">
  <h3 class="card-title text-center">Cadidate Details</h3>
 </div>
<div class="card-body">

<%= form_with  method: :post, url:admin2_path(@admins.id) do |form| %>


 <div class="form-group mb-2">
 <%= form.label :Name %><br>
  <%= form.text_field :name, value: @admins.name, class: "form-control form-control-lg"%>
</div>

<div class="form-group mb-2">
 <%= form.label :Email %><br>
 <%= form.text_field :email ,value: @admins.email, class: "form-control form-control-lg"%>
</div >


<div class="form-group mb-2">
  <%= form.label :Interviewer %><br>
  <%= form.text_field :inter ,value: @admins.inter, class: "form-control form-control-lg"%>
</div >

<div class="form-group mb-2">
  <%= form.label :First_Round %><br>
  <%= form.number_field :first ,value: @admins.first, class: "form-control form-control-lg"%>
</div >
 
<div class="form-group mb-2">
  <%= form.label :Second_Round %><br>
  <%= form.number_field :second ,value: @admins.second, class: "form-control form-control-lg"%>
</div >
 
<div class="form-group mb-2">
  <%= form.label :Third_Round %><br>
  <%= form.number_field :third ,value: @admins.third, class: "form-control form-control-lg"%>
</div >

<div>
 <%= form.submit "update", class: "btn btn-primary btn-lg"  %>
</div>
<% end %>

</div>
</div>